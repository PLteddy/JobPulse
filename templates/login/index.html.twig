{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/reset.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/connexion.css') }}">
                <link rel="stylesheet" href="{{ asset('css/home.css') }}">

{% endblock %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <body>
    <section class= "login-section container">
        <div class="login-form-container">
            <h1>Connexion</h1>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form method="post" class="login-form">
                <div class="form-group">
                    <label for="inputEmail" class="form-label">E-mail</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-input" required autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-input" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                
                <div class="button-container">
                    <div class="register-link">
                        <button id="open-popup" class="popup-button" type="button">
                            Pas encore de compte? <br>
                            Créez-en un ici!
                        </button>
                        <!-- Popup -->
                        <div id="popup" class="popup hidden">
                            <div class="popup-content">
                                <div class="popup-header">
                                <h1 class="inscription">Inscription</h1>
                                <button type="button" class="btn-close" id="close-popup">
                                <img src="{{ asset('img/close.svg') }}" alt="Fermer le menu">
                                </button>
                                </div>
                                <h2>Je m'inscris en tant que :</h2>
                                <ul>
                                    <li><a href="{{ path('inscription', { type: 'etudiant' }) }}">Étudiant</a></li>
                                    <li><a href="{{ path('inscription', { type: 'tuteur' }) }}">Tuteur</a></li>
                                    <li><a href="{{ path('inscription', { type: 'entreprise' }) }}">Entreprise</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <button class="login-button" type="submit">Connexion</button>
                </div>
            </form>
        </div>
    </section>
  <script>
document.addEventListener('DOMContentLoaded', function () {
    // Forcer l'actualisation complète de la page de login (équivalent F5)
    const urlParams = new URLSearchParams(window.location.search);
    const hasRefreshParam = urlParams.has('auto_refreshed');
    
    // Si la page n'a pas encore été actualisée automatiquement
    if (!hasRefreshParam) {
        // Vider le cache et forcer le rechargement complet
        if ('caches' in window) {
            caches.keys().then(function(names) {
                names.forEach(function(name) {
                    caches.delete(name);
                });
            });
        }
        
        // Construire la nouvelle URL avec le paramètre de contrôle
        const currentUrl = new URL(window.location);
        currentUrl.searchParams.set('auto_refreshed', Date.now());
        
        // Forcer le rechargement complet depuis le serveur (équivalent F5)
        window.location.replace(currentUrl.toString());
        return;
    }
    
    // Code popup existant (s'exécute seulement après l'actualisation)
    const openPopupButton = document.getElementById('open-popup');
    const closePopupButton = document.getElementById('close-popup');
    const popup = document.getElementById('popup');

    if (openPopupButton && closePopupButton && popup) {
        // Ouvrir la popup
        openPopupButton.addEventListener('click', function () {
            popup.classList.add('show');
            popup.classList.remove('hidden');
        });

        // Fermer la popup
        closePopupButton.addEventListener('click', function () {
            popup.classList.remove('show');
            popup.classList.add('hidden');
        });

        // Fermer la popup en cliquant en dehors
        window.addEventListener('click', function (event) {
            if (event.target === popup) {
                popup.classList.remove('show');
                popup.classList.add('hidden');
            }
        });
    }
    
    // Nettoyer l'URL après l'actualisation (optionnel)
    if (hasRefreshParam) {
        const cleanUrl = new URL(window.location);
        cleanUrl.searchParams.delete('auto_refreshed');
        window.history.replaceState({}, document.title, cleanUrl.toString());
    }
});
</script>
</body>
{% endblock %}