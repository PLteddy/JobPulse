<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Mes enregistrements</title>
    </head>
    <body>
        <div class="container mt-4">
            <h1>Mes offres enregistrées</h1>
            
            <div class="mb-4">
                <p>Connecté en tant que {{ app.user.prenom }} {{ app.user.nom }}</p>
                <div class="d-flex gap-2">
                    <a href="{{ path('tuteur_dashboard') }}" class="btn btn-primary">Retour au tableau de bord</a>
                    <a href="{{ path('app_logout') }}" class="btn btn-danger">Déconnexion</a>
                </div>
            </div>
            
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            
            {% if postesSauvegardes.empty %}
                <p>Vous n'avez pas encore enregistré d'offres.</p>
            {% else %}
                <div class="row">
                    {% for poste in postesSauvegardes %}
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{ poste.intitule }}</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">{{ poste.entreprise.nom }}</h6>
                                    <p class="card-text">{{ poste.description|slice(0, 100) }}{% if poste.description|length > 100 %}...{% endif %}</p>
                                    <div class="d-flex justify-content-between">
                                        <a href="{{ path('offre_details', {'id': poste.id}) }}" class="btn btn-sm btn-primary">Voir l'offre</a>
                                        <a href="{{ path('tuteur_sauvegarder_poste', {'id': poste.id}) }}" class="btn btn-sm btn-warning">
                                            <i class="fas fa-bookmark"></i> Retirer
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    
    </body>
</html>